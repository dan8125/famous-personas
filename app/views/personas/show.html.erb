<div>
  <div class="sidebar container border text-center bg-black text-white justify-content-center">
    <h2 class="fw-bold"><%= "Greetings from #{@persona.name}" %></h2>
    <%= image_tag url_for(@persona.photo),
    size: "320x320",
    class: "rounded-circle object-fit-cover d-block mx-auto" if @persona.photo.attached? %>
    <p><%= @persona.bio %> </p>
    <p>Paragraph 2: Insert friendly welcome from the persona.</p>
  </div>
  <div class="main-chat-container border bg-primary-subtle">
    <%= link_to "See Previous Conversations", chats_path(persona_id: @persona.id), class: "text-center" %>
    <h2 class="fw-bold text-center"><%= "Chat with #{@persona.name}" %></h2>
  </div>
</div>
